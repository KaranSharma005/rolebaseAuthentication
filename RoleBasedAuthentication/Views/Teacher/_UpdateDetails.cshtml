@{
    if (ViewBag.Subjects != null)
    {
        <form class="form-control" id="subject-form">
            @Html.DropDownList("Subject", (IEnumerable<SelectListItem>)ViewBag.Subjects, "Select a subject", new { @class = "form-control", required = "required" , data_id = Model})
            <br/>
            <button type="submit" class="btn-primary" id="submit-update">Update</button>
        </form>
    }
}