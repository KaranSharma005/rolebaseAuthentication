@model TeacherSubjectModal
@{
    @if (ViewBag.Subjects != null)
    {
            <form class="form-control" id="subject-form" method="post">
            <label for="SubjectId">Select subject : </label>
            <br/><br />
            @Html.DropDownList(
            "SubjectId",
            (List<SelectListItem>)ViewBag.Subjects,
            "Select a subject",
            new { @class = "form-control", required = "required", data_id = @Model?.Id }
            )
            <br />
            
            <input type="hidden" name="id" value="@Model.Id"/>

            <label for="className">Select class to assign : </label>
            <br /><br />
            @Html.DropDownList(
                "classId",
                (List<SelectListItem>)ViewBag.Classes,
                "Select a class",
                new { @class = "form-control", required = "required", data_id = @Model?.Id }
            )
            <br/>

            <label for="name">Your name : </label>
            <br/><br />
            <input type="text" name="name" value="@Model.Name" class="form-control" id="name" />
            <br />
            <button type="submit" class="btn btn-primary" id="submit-update">Update</button>
        </form>
    }

}